{
    "name": "ScoCMF",
    "description": "天蝎内容管理框架（Sco Content Management Framework）",
    "keywords": ["ScoCMF", "cmf"],
    "license": "Apache-2.0",
    "homepage": "http://www.scophp.com/",
    "type": "project",
    "authors" : [
        {
            "name": "klgd",
            "email": "slice1213@gmail.com",
            "homepage": "http://www.scophp.com/",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://git.oschina.net/klgd/ScoCMF.git"
    },
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.3.*",
        "zizaco/entrust": "dev-master",
        "davejamesmiller/laravel-breadcrumbs": "^3.0",
        "scolib/laravel-tree": "dev-master",
        "scolib/repositories": "dev-master",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*",
        "barryvdh/laravel-ide-helper": "^2.2",
        "barryvdh/laravel-debugbar": "^2.2"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files" : [
            "app/helpers.php"
        ],
        "psr-4": {
            "Sco\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
